// -*- mode: javascript -*-
{
    "Name": "moving boundary",
    "ShortName":"moving_boundary",
    "Models":
    {
        "fluid":{
            "materials":"Fluid",
            "equations":"Navier-Stokes"
        },
        "solid":{
            "materials":"Solid",
            "equations":"Hyper-Elasticity"
        },
        "fsi":
        {
            "setup":{
                "interface":"wall_balloon_internal"
            }
        }
    },
    "Parameters":
    {
        "ubar":"0.02",
        "chi":"t<2:t"
    },
    "Meshes":
    {
        "fluid":
        {
            "MeshMotion":
            {
                "ComputationalDomain":
                {
                    "markers":"Fluid"
                    //"method":"harmonic_extension"
                },
                "Displacement":
                {
                    "Imposed":{
                        "wall_bottom": { "expr":"{0,ubar*x*(5-x)*sin(2*pi*t)}:x:t:ubar" },
                        "wall_top": { "expr":"{0,-ubar*x*(5-x)*sin(2*pi*t)}:x:t:ubar" }
                    },
                    "Zero":["wall_left","wall_balloon_fixed"]
                }
            }
        }
    },
    "Materials":
    {
        "Fluid":{
            "rho":10,//"1.0e3",
            "mu":"1.0"
        },
        "Solid": {
            "E":"5.6e6",
            "nu":"0.4",
            "rho":"1e3"
        }
    },
    "BoundaryConditions":
    {
        "fluid":
        {
            "velocity":
            {
                "no_slip_bc":
                {
                    "markers":["wall_left","wall_balloon_fixed"],
                    "expr":"{0,0}"
                }
            },
            "mesh_velocity":{
                "markers":["wall_bottom","wall_top"]
            }
        },
        "solid":
        {
            "displacement":
            {
                "wall_balloon_fixed":
                {
                    "expr":"{0,0}"
                }
            }
        }
    },
    "PostProcess":
    {
        "fluid":
        {
            "Exports":
            {
                "fields":["velocity","pressure","mesh-displacement","pid"]
            }
        },
        "solid":
        {
            "Exports":
            {
                "fields":["displacement","velocity","pid"]
            }
        }
    }
}
